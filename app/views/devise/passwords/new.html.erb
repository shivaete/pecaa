
<a href="/"><img src="/assets/goBack.png" id="goBackButton"></a>

<div id="logo">
    <img src="/assets/logo.png" height="35" width="210">
</div>

<%= form_for User.new, :as => :user, :url => user_password_path do |f| %>
	<div id="forgotUsername">
		<label for="gUsername">forgot username</label>
		<%= f.text_field :email,:id=>"Uemailid", :class=>"textbox watermark" %>
	</div>

	<p><%= f.submit "Get Username",:class=>'blueButton'%></p>
<%end%>
<%= form_for User.new, :as => :user, :url => user_password_path do |f| %>
	<div id="forgotPassword">
		<label for="gEmailAddress">forgot password</label>
		<%= f.text_field :email,:id=>"gemailid", :class=>"textbox" %><br/>
		<%= f.text_field :username,:id=>"gUsername", :class=>"textbox"%>
	</div>
	
	<p><%= f.submit "Get Password",:class=>'blueButton'%></p>
	<%if flash[:notice] %><div class="loginErrorMsg"><%= flash[:notice] %>  </div><%end%>
<%end%>

<%if flash[:alert] %><div class="loginErrorMsg"><%= flash[:alert] %>  </div><%end%>


<script type="text/javascript">
	$(function () {
		$("#Uemailid").watermark("email address", {useNative: false});
	    $("#gemailid").watermark("email address", {useNative: false});
		$("#gUsername").watermark("username", {useNative: false});
    });

</script>




