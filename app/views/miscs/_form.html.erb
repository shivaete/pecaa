<%=hidden_field_tag :from_content, @from_content%>
<%=hidden_field_tag :content_type, "Misc"%>
<div class="contentObject" id="mapObj">
    <div class="resizable_content" style="<%=@resizable_el_style%>">
    <div class="alphaBg"></div>
    <div class="expandable">
        <span class="delete"><%=link_to image_tag('btn_ContentDelete.png'), '#',:href=>'javascript:void(0);',:onclick=>'delete_block('+@bloc_id.to_s+');'%></span>
        <span class="drag"></span>

        <div class="objectContent">
            <div class="mapTitle">store map</div>
            <img src="" id="map-canvas-image"> </img>

        </div>
    </div>
    </div>
</div>
<div class="contentObject" id="mapAddr" style="display: none;">
    <div class="dragableObject">
        <div class="dragable">
            <span class="drag"></span>
            <div class="dragContent">
                <div class="mapDetail">
                  <span class="key">title :</span><span class="val"><input id="misc_title" name="misc[title]" type="text" value="<%=@misc.title%>"></span>
                  <span class="key">address :</span><span class="val"><input id="misc_address" name="misc[address]" type="text" value="<%=@misc.address%>" id="mapAddress"></span>
                  <button id="reloadMap" class="primary">Reload</button>
                  <button id="saveMap" class="primary">Save</button>
                </div>
            </div>
            <div class="dragContentBottom"></div>
        </div>
    </div>
</div>
