<%= stylesheet_link_tag "layout", "content", "site_pages", "facebox", "modal_layout", 'themes' %>

<%= form_for [@site, @site_page] do |f| %>
  <%= f.hidden_field :page_layout %>
  <%= f.hidden_field :category, :value=>'page' %>
  <div class="main-container midium">
  	<div class="header">Create New Page<span class="helpIcon"></span></div>
  	<div class="main-content">
  		<div class="createPage">
  			<div class="extForm">
  				<div class="form-row">
  				  <span class="key">page name :</span>
    			  <span class="val"><%= f.text_field :name, :placeholder=>"My New Page" %></span>
  				</div>
  			</div>
  			<div class="createPageTitle">choose a page layout</div>
  			<div class="pageLayout-wrapper">
  				<div class="pageLayout" id="1_column" align="center">
  					<div class="name">1 column</div>
  					<div class="snap singleCol"></div>
  				</div>
  				<!--<div class="pageLayout" id="side_column">
  					<div class="name">side column</div>
  					<div class="snap sideCol"></div>
  				</div>
  				<div class="pageLayout" id="2_column">
  					<div class="name">2 column</div>
  					<div class="snap twoCol"></div>
  				</div>
  				<div class="pageLayout" id="3_column">
  					<div class="name">3 column</div>
  					<div class="snap threeCol"></div>
  				</div>-->
  			</div>
  		</div>
  	</div>
  	<div class="footer-section">
  		<div class="leftBtns"><button class="secondary" id="cancelBtn">cancel</button> </div>
  		<div class="rightBtns"><button class="primary" id="saveBtn">create page</button> </div>
  	</div>
  </div>
<% end %>
<script>
$('#cancelBtn').click(function(){
    $(document).trigger('close.facebox');
    return false;
});
$('.pageLayout').click(function(){
  $('#site_page_page_layout').attr('value', $(this).attr('id'));
  $(this).attr('style', 'border:1px;');
  return false;
});

$("#new_site_page").live('keydown', function(e){
  if (e.keyCode == 13){
    $(this).submit();
  }
});

</script>