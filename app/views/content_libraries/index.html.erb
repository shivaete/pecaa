        <span>Admin</span> <img src="images/icon-remove-red.png" />
        </div>
        <span>role</span>
    </div>-->
<!-- end of names -->
        </div>
<div class="userPanelDevider"></div>
<!-- end of rc table -->

<!-- slider rc -->
<div class="rcPaleBlue" style="padding:5px 5px 5px 5px; position:relative;">
	<div class="searchOptions"><input class="styled" type="checkbox" id="dateAdded" name="created_at" /><span>date added</span></div>
    <div class="clear"></div>

    <input type="text" class="datePicker" /><img src="images/icon-calender.png" class="calender" />

    <input type="text" class="datePickerRight" /><img src="images/icon-calender.png" class="calender" />
<div class="clearHeight10"></div>

<div class="searchOptions"><input class="styled" type="checkbox" id="lastUsed" name="last_used"/><span>date last used</span></div>

</div>
<!-- end of rc slider -->

<div class="userPanelDevider"></div>

<!-- slider rc -->
<div class="rcPaleBlue" style="padding:5px 5px 5px 5px; position:relative;">
	<div class="searchOptions"><input class="styled" type="checkbox" id="timesUsed" /><span>times used</span></div>

    <div id="slider" style="width:200px; margin-left:5px;"></div>

    <div class="clearHeight30"></div>

</div>
<!-- end of rc slider -->
<input type="submit" name="submit" value="Search">
</form>
    </div>

  <!-- col 2 -->
  <div class="userGrid">
    <div class="userGridHeader">
            <ul class="ConLibraHeads">
            <li>
                    <span class="name">Name<br /><br /><br /></span>
                <span class="type">Type<br /><br /><br /></span>
                <span class="lastUsed">Last Used<br /><br /><br /></span>
                <span class="timesUsed">Times Used<br /><br /></span>
                <span class="dateAdded">Date Added<br /><br /></span>
                <span class="addedBy">Added By<br /><br /></span>
            </li>
        </ul>
    </div>
  <!-- grid body -->
    <div class="userGridBody">
            <div id="scrollbar1">
            <div class="scrollbar">
              <div class="track">
                <div class="thumb">
                  <div class="end">
                  </div>
                </div>
              </div>
            </div>
            <div class="viewport">
              <div class="overview">
                <ul class="ConLibra">
                  <% unless @content_libraries.blank? %>
                    <% @content_libraries.each do |content| %>
                      <li class="<%= cycle("dark", "light") %>">
                        <%#*<span class="name" title="<%= content.name %->"><p><-%= truncate(content.name, :length => 25, :separator => '..') %-></p> <%= display_content(content) %-></span>%>
                        <span class="name" title="<%= filename(content.name) %>"><p><%= truncate(filename(content.name), :length => 20, :separator => '..') %></p> <%= display_content(content) %></span>
                        <span class="type"><%= content.source_type %></span>
                        <span class="lastUsed">admin</span>
                        <span class="timesUsed">99</span>
                        <span class="dateAdded">02/08/11</span>
                        <span class="addedBy" title="<%= content.added_by %>"><%= truncate(content.added_by, :length => 10, :separator => '..') %></span>
                        <span class="edit"><%= edit_content(content) %>
						<!--<a href="content_libraries/<%= content.id %>/delete">[X]</a>
						<input type="button" name="delete" onclick="deleteItem('<%= content.id %>')" value="[X]"> -->
						</span>
		
                      </li>
                    <% end %>
                  <% else %>
                      <li class="dark" style="text-align: center"> No Records Found </li>
                  <% end %>
               </ul>
         </div>
         </div>
         </div>
         </div>
  </div>
  <!-- end of grid body -->
  <div class="userGridFooter"></div>
  <div class="clear"></div>
  <!-- end of col 2 -->
</div>
