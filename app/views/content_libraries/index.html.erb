<div class="ueBodyContent">
  <!-- add buttons -->
  <div class="addButtons">
    <span class="addFile"><a href='<%= new_add_file_path %>' rel="facebox"></a></span>
    <span class="addForm"><a href='<%= new_add_form_path %>' rel="facebox"></a></span>
    <span class="addText"><a href='<%= new_text_path %>' rel="facebox"></a></span>
    <span class="addVideo"><a href='<%= new_video_path %>' rel="facebox"></a></span>
    <span class="addImage"><a href='<%= new_image_path %>' rel="facebox"></a></span>
  </div>
  <!-- end of add buttons -->
  <div class="clear"></div>
  <!-- col 1 -->
  	<div class="userSearch">
	<form name="search" id="search" action="/content_libraries/list_search" method="post">
<!-- rc table -->
        <div class="rcPaleBlue" style="padding:50px 5px 10px 5px; position:relative;">
        <!-- search and select -->
        	<input type="text" class="userSearchField" name="name" />
            <img src="images/icon-user-search-field.png" style="position:absolute; right:0; top:0;" onclick="javascript: document.search.submit();"/>
            <div class="selectDiv">
            <select class="select" title="Select one" name="source_type">
            	<option value="">All</option>
                <option value="text">Text</option>
                <option value="file">File</option>
                <option value="image">Image</option>
                <option value="video">Video</option>
                <option value="addform">Form</option>
            </select>
            </div>
            <!-- end of search and select -->

<!-- names -->
<div>
<select name="added_by">
<option value="">all</option>
<% @users.each do |user| %>
	<option value="<%= user.username %>"> <%= user.username %></option>
	<br>
	<% end %>
</select>
</div>

	<!-- <div class="rcBlue2">
	
    	<div class="rcBlack2">
        <span>Smith</span> <img src="images/icon-remove.png" />
        </div>
        <span>name</span>
    </div> 

    <div class="rcBlue2">
